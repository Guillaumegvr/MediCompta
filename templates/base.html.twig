<!DOCTYPE html>
<html>
<head>
    <meta lang="fr-FR">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MediCompta{% block title %}{% endblock %}</title>
    <link rel="icon" href="{{ asset('image/favicon.png') }}">
    {% block stylesheets %}
        <link href="{{ asset('styles/app.css') }}" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <a class="navbar-brand" href="{{ path('app_main_home') }}">
            <img class="logo" src="{{ asset('image/logo.png') }}" width="150" height="150" alt="logo site">
        </a>
        <button class="navbar-toggler m-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" id="activeLink" href="{{ path('app_main_tableauDeBord') }}">Tableau de bord</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_booking_calendar') }}">Agenda</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Comptabilité
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('app_comptabilite_liste') }}">Renseignez vos rétributions</a>
                        <a class="dropdown-item" href="#">Bilan Comptable</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Remplacements
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('app_remplacement_create') }}">Ajouter un remplacement</a>
                        <a class="dropdown-item" href="{{ path('app_remplacement_liste') }}">Liste des remplacements</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                       Médecins
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('app_create_medecin') }}">Ajouter médecin</a>
                        <a class="dropdown-item" href="#">Liste des médecins remplacés</a>
                    </div>
                </li>
            </ul>
            <div>
                {% if not is_granted('ROLE_USER') %}
                    <a class="border border-secondary p-3 rounded nav-link m-3" href="{{ path('app_login_index') }}">Se Connecter</a>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                     <a class="border border-secondary p-3 rounded nav-link m-3" href="{{ path('app_logout') }}">Se Déconnecter</a>
                {% endif %}
            </div>
        </div>
    </nav>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>
