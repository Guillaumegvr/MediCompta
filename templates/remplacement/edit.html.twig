{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Modifier un remplacement{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_5_layout.html.twig' %}

    <h3 class="m-3">Modifier le remplacement :</h3>

    <div id="login-form">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary"> Valider les modifications </button>
        {{ form_end(form) }}
    </div>
    <div>
        <!-- Formulaire de suppression -->
        <form action="{{ path('app_remplacement_delete', {'id': remplacement.id }) }}" method="post" style="display:inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ remplacement.id) }}">
            <button type="submit" class="btn btn-danger m-5" > Supprimer le remplacement</button>
        </form>
    </div>

{% endblock %}
