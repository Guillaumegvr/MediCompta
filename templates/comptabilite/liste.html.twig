{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Comptabilité{% endblock %}

{% block body %}
    <h3 class="m-3">Liste des remplacements en attente de paiement:</h3>

    <div class="m-5 d-flex justify-content-center">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Médecin remplacé</th>
                <th scope="col">Période</th>
                <th scope="col">Somme rapportée</th>
                <th scope="col">Estimation du paiement à venir</th>
                <th scope="col">Somme perçue</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for remplacement in remplacements %}
                <tr>
                    <td>{{ remplacement.medecin.nom }}</td>
                    <td>Du {{ remplacement.beginAt | date('d-m-Y') }} au {{ remplacement.endAt | date('d-m-Y') }}</td>
                    <td>{{ remplacement.chiffreRealise}}</td>
                    <td>{{ remplacement.chiffreRealise * (remplacement.medecin.retrocession /100)}}</td>
                    <td>{{remplacement.paiementEffectue}}</td>
                    <td>
                        <a href="{{ path('app_comptabilite_edit', {'id': remplacement.id }) }}" class="btn btn-primary" style="background-color:#2E8486" aria-label="Mettre à jour">Mettre à jour</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="m-3">
        <a href="{{ path('app_remplacement_create') }}" class="btn btn-outline-secondary m-3" aria-label="Créer un nouveau remplacement">Créer un nouveau remplacement</a>
    </div>

{% endblock %}
